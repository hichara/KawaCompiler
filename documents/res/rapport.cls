% Permet de conditionner la mise en page de la page de garde.
\usepackage{ifthen}

% page de garde
\makeatletter
\def \maketitle{%
    \begin{titlepage}
        \ifx \@logo \@empty
            \hfill
        \else
            \includegraphics[width=0.33\textwidth]{\@logo}
        \fi
        \ifx \@projet \@empty
            \relax
        \else
            \ifx \@projdesc \@empty
            \parbox[b][4em][b]{0.66\textwidth}{
                    \flushright
                    {\Huge {\bfseries \@projet}}
                }
            \else
                \parbox[b][4em][b]{0.66\textwidth}{
                    \flushright
                    {\Huge {\bfseries \@projet}}
                    \newline {\Large \@projdesc} 
                }
            \fi
        \fi
        
        ~\vfill
        \begin{center}
            \ifx \@title \@empty
                \relax
            \else
                {\huge \textbf{\@title} {\Large \@version}}\\
            \fi
            {\@date}\\
            \vspace{2em}
            \ifx \@author \@empty
                \relax
            \else
                Auteur(s): \@author\\
            \fi
            \ifx \@participants \@empty
                \relax
            \else
                Participant(s): \@participants\\
            \fi
            \ifx \@absents \@empty    
                \relax
            \else
                Absent(s): \@absents\\
            \fi
            \vspace{5em}
            \ifx \@history \@empty
                \relax
            \else
                \begin{tabular}[t]{|c|c|p{10cm}|}
                    \hline
                    \rowcolor{gray} \textcolor{white} {\bfseries Version} & \textcolor{white} {\bfseries Date} & \textcolor{white} {\bfseries Changelog} \\
                    \hline
                    \@history
                    &&\\
                    \hline 
                \end{tabular}
            \fi
        \end{center}
        \vfill
    \end{titlepage}
}
\makeatother
